<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MASP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TENSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SOLUONGTON)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.MOTA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GIABAN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CHATLIEU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MAUSAC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BAOHANH)
            </th>
            <th>
                Loại sản phẩm
            </th>
            <th>
                Ảnh sản phẩm
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MASP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SOLUONGTON)
            </td>

            <td style="  overflow: hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical; ">
                @Html.DisplayFor(modelItem => item.MOTA)
            </td>
            <td>
                    @item.GIABAN.ToString("#,##0")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CHATLIEU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MAUSAC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BAOHANH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSanPham.TENLSP)
            </td>
            <td>
                <img src="@("/Avatar/" + item.IMG)"/>
            </td>
                
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ID">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>



