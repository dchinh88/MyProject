@model ProjectNet.Models.NhanVien

@{
    ViewData["Title"] = "Create";
}



<h4 style="margin-top: 100px">Đăng kí nhân viên</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-lg-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-12 p_star">
                <label asp-for="MANV" class="control-label">Mã nhân viên</label>
                <input asp-for="MANV" class="form-control"/>
                <span asp-validation-for="MANV" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 p_star">
                <label asp-for="HOTEN" class="control-label">Họ tên</label>
                <input asp-for="HOTEN" class="form-control" />
                <span asp-validation-for="HOTEN" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 p_star">
                <label asp-for="NGAYSINH" class="control-label">Ngày sinh</label>
                <input asp-for="NGAYSINH" class="form-control" />
                <span asp-validation-for="NGAYSINH" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 p_star">
                <label asp-for="DIACHI" class="control-label">Địc chỉ</label>
                <input asp-for="DIACHI" class="form-control" />
                <span asp-validation-for="DIACHI" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 p_star">
                <label asp-for="SDT" class="control-label">Số điện thoại</label>
                <input asp-for="SDT" class="form-control" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 p_star">
                <span>Chọn ảnh đại diện</span>
                <input type="file" name="formFile" />
            </div>
            <div class="form-group col-md-12 p_star">
                <label asp-for="EMAIL" class="control-label">Email</label>
                <input asp-for="EMAIL" class="form-control" />
                <span asp-validation-for="EMAIL" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 p_star">
                <label asp-for="TENDN" class="control-label">Tên đăng nhập</label>
                <input asp-for="TENDN" class="form-control" />
                <span asp-validation-for="TENDN" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 p_star">
                <label asp-for="PASS" class="control-label">Mật khẩu</label>
                <input asp-for="PASS" class="form-control" />
                <span asp-validation-for="PASS" class="text-danger"></span>
            </div>
            <div class="form-group form-check col-md-12 p_star">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ISADMIN" /> @Html.DisplayNameFor(model => model.ISADMIN)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

